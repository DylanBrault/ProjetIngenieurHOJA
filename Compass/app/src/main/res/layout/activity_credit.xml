<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".credit">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="362dp"
        android:layout_height="82dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Issue d'une idée originale de Raigi, Hoja est une application développée par une équipe de 6 étudiants de Télécom Saint-Etienne. "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="233dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/logoraigi" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="296dp"
        android:layout_height="92dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/logotse" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="247dp"
        android:layout_height="91dp"
        android:layout_marginStart="16dp"
        android:text="RAIGI  Arbouville\n28310 Rouvray-Saint-Denis France\nFax: +33 2 37 22 70 49\nTel: +33 2 37 33 30 40\nE-mail: raigi@raigi.com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="250dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="Télécom Saint-Etienne\n25 rue du Dr Remy Annino 42000 Saint-Etienne, FR\nTél : +33 (0)4 77 91 58 88\nFax : +33 (0)4 77 91 58 99\ncontact@telecom-st-etienne.fr"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="385dp"
        android:layout_height="52dp"
        android:layout_marginBottom="8dp"
        android:onClick="accueil"
        android:text="Accueil"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>